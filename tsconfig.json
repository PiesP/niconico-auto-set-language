{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],

    "module": "ES2020",
    "moduleResolution": "Bundler",

    "strict": true,
    "alwaysStrict": false,
    "noUncheckedIndexedAccess": true,

    "types": ["tampermonkey"],
    "skipLibCheck": true,

    "noEmit": true
  }
}
